{
  "manifest_version": 3,
  "name": "Shef Cart Companion",
  "version": "1.0.0",
  "description": "AI-powered taste profiles, fun facts & pairing tips for your Shef.com cart",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://www.shef.com/*", "https://shef.com/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.shef.com/*", "https://shef.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
